{
  "name": "Antibias Chrome Extension",
  "version": "0.0.1",
  "description": "Chrome extension designed to reduce implicit bias by obfuscating profile names and images on LinkedIn.",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "content_scripts": [
    {
      "persistent": false,
      "matches": ["https://*.linkedin.com/*"],
      "web_accessible_resources": ["img/pattern.jpg"],
      "css" : ["css/content.css"],
      "js" : ["js/content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "persistent": false,
    "scripts": ["js/background.js"]
  },
  "icons": {
    "16": "img/icon-enabled/icon16.png",
    "32": "img/icon-enabled/icon32.png",
    "48": "img/icon-enabled/icon48.png",
    "128": "img/icon-enabled/icon128.png"
  },
  "browser_action": {
    "persistent": false,
    "matches": ["https://*.linkedin.com/*"],
    "default_icon": {
      "16": "img/icon-enabled/icon16.png",
      "32": "img/icon-enabled/icon32.png",
      "48": "img/icon-enabled/icon48.png",
      "128": "img/icon-enabled/icon128.png"
    },
    "default_popup": "html/popup.html",
    "priority": 25
  },
  "web_accessible_resources": [
    "img/*.jpg",
    "img/icon-enabled/*.png",
    "css/*.css",
    "js/*.js",
    "js/*.html"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
